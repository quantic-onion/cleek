h1,
h2,
h3,
h4,
h5,
h6,
div,
span,
p,
ul,
ol,
li
  margin 0
  padding 0
  box-sizing border-box
a
  color unset
  text-decoration unset
ul
  list-style-type none

body
  margin 0
  padding 0

// INPUT NUMBER ARROWS
/* Chrome, Safari, Edge, Opera */
input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
  -webkit-appearance none
  margin 0
/* Firefox */
input[type=number]
  -moz-appearance textfield
